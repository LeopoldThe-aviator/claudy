= f.text_area :body,
              rows: 3

.space-y-2
  = f.label :color,
            "Type de note"
  .space-y-4
    = f.collection_radio_buttons :color,
                                 [ \
                                   [raw("<span class=\"px-2 py-1 bg-yellow-200 rounded-md border border-white hover:border hover:border-yellow-500\">Nettoyages</span>"), "yellow"], 
                                   [raw("<span class=\"px-2 py-1 bg-pink-200 rounded-md border border-white hover:border hover:border-pink-500\">Activit√©s</span>"), "pink"], 
                                   [raw("<span class=\"px-2 py-1 bg-green-200 rounded-md border border-white hover:border hover:border-green-500\">Locations tente/van</span>"), "green"],
                                   [raw("<span class=\"px-2 py-1 bg-blue-200 rounded-md border border-white hover:border hover:border-blue-500\">Informations/Autres</span>"), "blue"] \
                                 ],
                                 :last, :first, 
                                 required: true do |radio_button|
      .flex.items-center
        = radio_button.radio_button
        = radio_button.label(class: "ml-2 block text-sm font-medium text-gray-700")

.hidden
  = f.text_field :date